<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blue_green</item>
        <item name="colorPrimaryDark">@color/blue_green</item>
        <item name="colorAccent">@color/yellow_green</item>
        <item name="android:textColorPrimary">@color/blue_green</item>
        <!-- Change top bar color. False = white. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">@color/blue_green</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowSharedElementReenterTransition">@null</item>
        <item name="android:windowReenterTransition">@null</item>
    </style>

    <style name="SplashTheme" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/white</item>
    </style>

    <!-- Bottom navigation. -->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">44dp</item>
        <item name="labelVisibilityMode">labeled</item>
        <item name="android:background">@color/light_grey</item>
    </style>

    <!-- HOME -->
    <!-- TextViews -->
    <style name="Main_title_textView">
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/blue_green</item>
    </style>

    <style name="your_money_text_view">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="your_money_secondary_text_view">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <!-- Buttons -->
    <style name="Button">
        <item name="cornerRadius">20dp</item>
        <item name="android:textAppearance">@style/ButtonTextAppearance</item>
    </style>

    <!-- Button Text Appearance-->
    <style name="ButtonTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">15sp</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Button Primary -->
    <style name="Button.Primary">
        <item name="android:textStyle">bold</item>
        <item name="android:backgroundTint">@color/yellow_green</item>
        <item name="android:textColor">@color/blue_green</item>
    </style>

    <!-- Button Secondary -->
    <style name="Button.Secondary">
        <item name="android:visible">false</item>

        <item name="android:backgroundTint">@color/blue_green</item>
        <item name="android:textColor">@color/light_green</item>
        <item name="elevation">0dp</item>
    </style>


    <!-- SETTINGS -->
    <!-- Settings Button -->
    <style name="SettingsButton">
        <item name="android:visible">false</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:textColor">@color/darkest_green</item>
        <item name="elevation">0dp</item>
    </style>
    <!-- Settings TextViews -->
    <style name="SettingsTextViews">
        <item name="android:textColor">#3F5355</item>
        <item name="android:textSize">20sp</item>
    </style>
</resources>